<?xml version="1.0" encoding="utf-8"?>
<schemalist gettext-domain="speech-dispatcher">
  <schema path="/org/freebsoft/speechd/modules/flite/" id="org.freebsoft.speechd.modules.flite">

    <key name="max-chunk-length" type="u">
      <_summary>Max Chunk Length</_summary>
      <default>500</default>
    </key>
    
    <key name="delimiters" type="s">
      <_summary>Delimiters</_summary>
      <default>".?!;"</default>
    </key>

    <key name="debug" type="u">
      <_summary>Debug</_summary>
      <_description>
        Debugging setting. Possible values are:
        0 disabled
        1 enabled
        2 log to file.
      </_description>
      <default>0</default>
    </key>

    <key name="debug-file" type="s">
      <_summary>Debug File</_summary>
      <_description>
        debug-file specifies the file where the debugging information
        should be stored (note that the log is overwritten each time
        the module starts)
      </_description>
      <default>"/tmp/debug-flite"</default>
    </key>
  </schema>
</schemalist>
